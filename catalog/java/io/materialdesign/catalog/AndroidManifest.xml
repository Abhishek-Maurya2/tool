<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  package="io.materialdesign.catalog"
  android:versionCode="47"
  android:versionName="1.0.20">

  <uses-permission android:name="com.google.android.gms.permission.AD_ID" tools:node="remove" />
  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />

  <uses-sdk />

  <application
    android:name="io.materialdesign.catalog.application.${application_name}"
    android:allowBackup="true"
    android:enableOnBackInvokedCallback="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/cat_app_name"
    android:supportsRtl="true"
    android:theme="@style/Theme.${application_theme}">
    <meta-data
      android:name="io.materialdesign.catalog.application.componentOverride"
      android:value="${catalog_application_component}"/>

    <activity
      android:name=".main.MainActivity"
      android:exported="true"
      android:windowSoftInputMode="adjustResize">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
      android:name=".elevation.ElevationOverlayDemoActivity"
      android:exported="true"
      android:label="@string/cat_elevation_overlay_title" />
    <activity
      android:name=".navigationdrawer.NavigationDrawerDemoActivity"
      android:exported="true"
      android:label="@string/cat_navigationdrawer_title" />
    <activity
      android:name=".navigationdrawer.CustomNavigationDrawerDemoActivity"
      android:exported="true"
      android:label="@string/cat_navigationdrawer_custom_title" />
    <activity
      android:name=".topappbar.TopAppBarActionBarDemoActivity"
      android:exported="true"
      android:label="@string/cat_topappbar_action_bar_title"
      android:theme="@style/Theme.Material3.DayNight"/>
    <activity
      android:name=".topappbar.TopAppBarScrollingTransparentStatusDemoActivity"
      android:exported="true"
      android:label="@string/cat_topappbar_scrolling_transparent_title"
      android:theme="@style/Theme.Catalog.TransparentStatus"/>
    <activity
      android:name=".card.CardSelectionModeActivity"
      android:exported="true"/>
    <activity
      android:name=".musicplayer.MusicPlayerDemoActivity"
      android:exported="true"
      android:theme="@style/Theme.Catalog.MusicPlayer"/>
    <activity
      android:name=".transition.TransitionContainerTransformStartDemoActivity"
      android:exported="true"/>
    <activity
      android:name=".transition.TransitionContainerTransformEndDemoActivity"
      android:exported="true"/>
    <activity
      android:name="io.materialdesign.catalog.transition.TransitionSharedAxisStartDemoActivity"
      android:exported="true" />
    <activity
      android:name="io.materialdesign.catalog.transition.TransitionSharedAxisEndDemoActivity"
      android:exported="true" />
    <activity
      android:name="io.materialdesign.catalog.adaptive.AdaptiveMusicPlayerDemoActivity"
      android:exported="true" />
    <activity
      android:name="io.materialdesign.catalog.adaptive.AdaptiveListViewDemoActivity"
      android:exported="true" />
    <activity
      android:name="io.materialdesign.catalog.adaptive.AdaptiveFeedDemoActivity"
      android:exported="true" />
    <activity
      android:name="io.materialdesign.catalog.adaptive.AdaptiveHeroDemoActivity"
      android:exported="true" />
    <activity
      android:name="io.materialdesign.catalog.adaptive.AdaptiveSupportingPanelDemoActivity"
      android:exported="true" />
    <activity
      android:name="io.materialdesign.catalog.color.ColorHarmonizationDemoActivity"
      android:exported="true" />
    <activity
      android:name="io.materialdesign.catalog.search.SearchMainDemoActivity"
      android:windowSoftInputMode="adjustNothing"
      android:exported="true" />
    <activity
      android:name="io.materialdesign.catalog.search.SearchRecyclerDemoActivity"
      android:windowSoftInputMode="adjustNothing"
      android:exported="true" />
    <activity
      android:name="io.materialdesign.catalog.search.SearchBarWithAppBarIconsDemoActivity"
      android:windowSoftInputMode="adjustNothing"
      android:exported="true" />
    <provider
        android:name="androidx.core.content.FileProvider"
        android:authorities="${applicationId}.provider"
        android:exported="false"
        android:grantUriPermissions="true">
        <meta-data
            android:name="android.support.FILE_PROVIDER_PATHS"
            android:resource="@xml/provider_paths" />
    </provider>
  </application>

</manifest>
