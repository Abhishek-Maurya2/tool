<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="32dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Settings"
            android:textAppearance="?attr/textAppearanceHeadlineMedium" />

        <!-- Preferences Section -->
        <include layout="@layout/cat_settings_section_header" />
        <LinearLayout
            android:id="@+id/preferences_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <!-- Updates Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingTop="24dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            android:text="Updates"
            android:textAppearance="?attr/textAppearanceTitleSmall"
            android:textColor="?attr/colorPrimary" />

        <LinearLayout
            android:id="@+id/update_section_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/item_check_update"
                layout="@layout/cat_settings_item" />

            <!-- Dynamic content for update status -->
            <LinearLayout
                android:id="@+id/update_status_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="56dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp"
                android:visibility="gone">
                
                <TextView
                     android:id="@+id/new_version"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="New Version Available"
                     android:textAppearance="?attr/textAppearanceBodyMedium"
                     android:textColor="?attr/colorPrimary"
                     android:visibility="gone"/>

                <Button
                    android:id="@+id/btn_action_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Download &amp; Install"
                    android:visibility="gone"/>

                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceBodySmall" />

                <LinearLayout
                    android:id="@+id/error_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:background="?attr/colorSurfaceVariant"
                    android:padding="8dp"
                    android:layout_marginTop="8dp">
                    
                    <TextView
                        android:id="@+id/error_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:textAppearance="?attr/textAppearanceBodySmall"/>
                        
                    <Button
                        android:id="@+id/btn_copy_error"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Copy Error"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_gravity="end"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <!-- About Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingTop="24dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            android:text="About"
            android:textAppearance="?attr/textAppearanceTitleSmall"
            android:textColor="?attr/colorPrimary" />

        <include
            android:id="@+id/item_app_version"
            layout="@layout/cat_settings_item" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
